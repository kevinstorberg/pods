#!/bin/bash

# PODs Shell Setup
# Installs PODs shell function for proper git tree directory changing

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

echo "ðŸ”§ Setting up PODs shell integration..."
echo ""

source "${SCRIPT_DIR}/lib/shell-function.sh"
setup_pods_function

echo ""
echo "ðŸŽ‰ Setup complete!"
echo ""
echo "The 'pods' shell function has been added to enable:"
echo "  pods g tree <name>  # Creates worktree AND switches to it"
echo ""
echo "Please restart your terminal or run:"
if [[ "$SHELL" == *"zsh"* ]]; then
    echo "  source ~/.zshrc"
elif [[ "$SHELL" == *"bash"* ]]; then
    echo "  source ~/.bashrc"
fi